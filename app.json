{
  "name": "TSM - Telegram SMM Bot",
  "description": "Complete Telegram Bot for Social Media Marketing Services",
  "keywords": [
    "telegram",
    "bot",
    "smm",
    "panel",
    "social-media"
  ],
  "website": "https://github.com/mrwasif-dev/TSM",
  "repository": "https://github.com/mrwasif-dev/TSM",
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "ADMIN_IDS": {
      "description": "Comma-separated admin Telegram IDs",
      "required": true
    },
    "JAZZCASH_NUMBER": {
      "description": "Your JazzCash account number",
      "required": true
    },
    "EASYPAISA_NUMBER": {
      "description": "Your EasyPaisa account number",
      "required": true
    },
    "UPSTREAM_API_URL": {
      "description": "Upstream SMM panel API URL",
      "required": false
    },
    "UPSTREAM_API_KEY": {
      "description": "Upstream SMM panel API key",
      "required": false
    },
    "CURRENCY": {
      "description": "Currency symbol",
      "required": false,
      "value": "PKR"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    "heroku-postgresql:essential-0"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
