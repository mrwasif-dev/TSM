{
  "name": "TSM - Telegram SMM Bot",
  "description": "Complete Telegram Bot for Social Media Marketing Services",
  "keywords": [
    "telegram",
    "bot",
    "smm",
    "panel",
    "social-media",
    "marketing",
    "pakistan",
    "jazzcash",
    "easypaisa"
  ],
  "website": "https://github.com/mrwasif-dev/TSM",
  "repository": "https://github.com/mrwasif-dev/TSM",
  "logo": "https://raw.githubusercontent.com/mrwasif-dev/TSM/main/logo.png",
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "ADMIN_IDS": {
      "description": "Comma-separated admin Telegram IDs (e.g., 123456789,987654321)",
      "required": true
    },
    "JAZZCASH_NUMBER": {
      "description": "Your JazzCash account number for payments",
      "required": true,
      "value": "03001234567"
    },
    "EASYPAISA_NUMBER": {
      "description": "Your EasyPaisa account number for payments",
      "required": true,
      "value": "03001234567"
    },
    "UPSTREAM_API_URL": {
      "description": "Your upstream SMM panel API URL (optional)",
      "required": false,
      "value": "https://api.example.com"
    },
    "UPSTREAM_API_KEY": {
      "description": "Your upstream SMM panel API key (optional)",
      "required": false,
      "value": "your-api-key"
    },
    "CURRENCY": {
      "description": "Currency symbol (PKR, INR, USD, etc.)",
      "required": false,
      "value": "PKR"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"  // ðŸ‘ˆ Changed from "eco" to "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
